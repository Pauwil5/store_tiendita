  <%= csrf_meta_tags %>
</head>
<body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
	<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">
        <img alt="Brand" src="http://europeangreens.eu/sites/europeangreens.eu/files/styles/related_news_thumbnail/public/icons/SF.png?itok=IsEkLXPb">
      </a>

    </div>
    <ul class="nav nav-pills">
		<% if session[:user_id] %>
		  <li role="presentation" class="active"><a href="#">Home</a></li>
		  <li role="presentation"><%= link_to 'Cerrar sesion', login_users_path, method: :delete %></li>
		  <li role="presentation" class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
		  Dropdown <span class="caret"></span></a>
		  </li>



		  <%else%>
		  <li role="presentation" class="active"><a href="#">Home</a></li>
